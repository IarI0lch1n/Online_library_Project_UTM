@model Online_lib.Domain.Entities.User.UserProfileModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">

                    <div class="row text-center">
                        <div class="col">
                            <img width="100px" src="~/Images/User.png" alt="Profile Image" />
                            <h4>Your Profile</h4>
                            <span>Account Status - <span class="badge rounded-pill bg-info p-2 text-white">Active</span></span>
                        </div>
                    </div>

                    <hr />

                    @using (Html.BeginForm("Index", "Profile", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <label>Full Name</label>
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Full Name" })
                            </div>
                            <div class="col-md-6">
                                <label>Date of Birth</label>
                                @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Contact Number</label>
                                @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control", type = "tel" })
                            </div>
                            <div class="col-md-6">
                                <label>Email ID</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label>State</label>
                                @Html.DropDownListFor(m => m.State, new SelectList(new[] { "Select", "Moldova", "Romania", "Ukraine" }), new { @class = "form-control" })
                            </div>
                            <div class="col-md-4">
                                <label>City</label>
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4">
                                <label>Pincode</label>
                                @Html.TextBoxFor(m => m.Pincode, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <label>Full Address</label>
                                @Html.TextAreaFor(m => m.FullAddress, new { @class = "form-control", rows = 2 })
                            </div>
                        </div>

                        <hr />
                        <div class="row text-center">
                            <div class="col">
                                <span class="badge rounded-pill bg-info p-2 text-white">Login Credentials</span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label>User ID</label>
                                @Html.TextBoxFor(m => m.UserID, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                            <div class="col-md-4">
                                <label>Old Password</label>
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4">
                                <label>New Password</label>
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                            </div>
                        </div>

                        <hr />
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-50">Update</button>
                        </div>

                        @if (!string.IsNullOrEmpty(ViewBag.Message as string))
                        {
                            <div class="alert alert-success mt-3 text-center">
                                @ViewBag.Message
                            </div>
                        }
                    }

                    <hr />
                    <a href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_Homepage" })">Back to Home Page</a>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card">
                <div class="card-body text-center">
                    <img width="100px" src="~/Images/Books.png" alt="Books" />
                    <h4>Your Read Books</h4>
                    <span class="badge rounded-pill bg-info p-2 text-white">Your books info</span>
                    <hr />
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Тут в будущем можно подключить Model.Books -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
