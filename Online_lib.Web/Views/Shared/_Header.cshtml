@{
    var homepageView = Session["HomepageView"] as string ?? "_Homepage";
}

<header>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand btn" href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_Homepage" })">
                <img src="~/Images/Books.png" width="30" height="30" />
                E-Library
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item active">
                        <a class="nav-link btn" href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_Homepage" })">Home</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#">About us</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Terms</a>
                    </li>
                </ul>

                <div>
                    <ul class="navbar-nav ms-auto">
                        @if (Session["UserRole"]?.ToString() == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Book")">Book Inventory</a>
                            </li>
                        }
                        else if (Session["UserRole"]?.ToString() == "User" || Session["UserRole"]?.ToString() == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Book")">Issue Books</a>
                            </li>
                        }
                        @if (Session["UserFullName"] == null)
                        {
                            <li class="nav-item active">
                                <a class="nav-link btn" href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_UserLogin" })">User Login</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link btn" href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_UserSignIn" })">Sign Up</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item active">
                                <a class="nav-link btn" href="@Url.Action("Logout", "Login")">Logout</a>
                            </li>
                            <li class="nav-item active d-flex align-items-center">
                                @{
                                    var role = Session["UserRole"] as string;
                                    var iconPath = role == "Admin"
                                        ? Url.Content("~/Images/Admin.png")
                                        : Url.Content("~/Images/User.png");
                                }
                                <img src="@iconPath" alt="User" width="32" height="32" style="margin-right: 8px;" />
                                <a class="nav-link btn" href="@Url.Action("Dashboard", "Profile")">
                                    @Session["UserFullName"]
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>

<script>
    function changeHomepage(viewName) {
        fetch('@Url.Action("ChangeHomepage", "Home")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify({ homepage: viewName })
        }).then(response => {
            if (response.ok) {
                location.reload();
            }
        });
    }
</script>
