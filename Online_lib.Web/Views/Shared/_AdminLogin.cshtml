<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <center>
                    <img width="150px" src="~/Images/Admin.png" alt="Admin" />
                </center>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <center>
                    <h3>Admin Login</h3>
                </center>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <hr />
            </div>
        </div>

        <form method="post">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <input asp-for="MemberID" class="form-control" placeholder="Member ID" />
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                    </div>

                    <hr style="border: none; height: 1px; margin: 20px 0; background-color: transparent;">

                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-lg d-block w-100">Login</button>
                    </div>

                    <hr style="border: none; height: 1px; margin: 20px 0; background-color: transparent;">
                </div>
            </div>
        </form>
    </div>
</div>