@model List<Online_lib.Domain.Entities.User.Author>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center">Author management</h4>
                    <img class="mx-auto d-block" width="100px" src="~/Images/Writer.png" />
                    <hr />
                    <form method="post" action="@Url.Action("AddAuthor", "AdminAuthorManagement")">
                        <div class="form-group">
                            <label>Name</label>
                            <input name="fullName" type="text" class="form-control" placeholder="Name" required />
                        </div>
                        <div class="form-group">
                            <label>Date of Birth</label>
                            <input name="dateOfBirth" type="date" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Country</label>
                            <input name="country" type="text" class="form-control" placeholder="Country" required />
                        </div>
                        <div class="form-group">
                            <label>Date of Death (if you need)</label>
                            <input name="dateOfDeath" type="date" class="form-control" />
                        </div>
                        <div class="text-center">
                            <button class="btn btn-success" type="submit">Add</button>
                        </div>
                    </form>
                </div>
            </div>
            <a href="@Url.Action("Index", "Home")">Back to Home Page</a>
        </div>

        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center">Author List</h4>
                    <hr />
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Country</th>
                                <th>Date of Birth</th>
                                <th>Data of Death</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var author in Model)
                            {
                                <tr>
                                    <td>@author.Id</td>
                                    <td>@author.FullName</td>
                                    <td>@author.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                    <td>@author.Country</td>
                                    <td>@(author.DateOfDeath?.ToString("yyyy-MM-dd") ?? "-")</td>
                                    <td>
                                        <a class="btn btn-sm btn-danger"
                                           href="@Url.Action("Delete", "AdminAuthorManagement", new { id = author.Id })">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
