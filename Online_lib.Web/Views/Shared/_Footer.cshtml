@using Online_lib.BusinessLogic.DBModel

@{
    int? role = null;
    int? userId = Session["UserID"] as int?;
    if (userId.HasValue)
    {
        using (var db = new UserContext())
        {
            var user = db.Users.Find(userId.Value);
            if (user != null)
            {
                role = (int)user.Role;
            }
        }
    }
}

<div id="footer1" class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 text-center">
            <p>
                @if (role == 1)
                {
                    <a class="footerlinks btn" href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_AdminLogin" })">Admin Login</a>
                    @Html.Raw("&nbsp;")
                    <a class="footerlinks btn" href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_AdminAuthorManagement" })">Author Management</a>
                    @Html.Raw("&nbsp;")
                    <a class="footerlinks btn" href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_AdminPublisherManagement" })">Publisher Management</a>
                    @Html.Raw("&nbsp;")
                    <a class="footerlinks" href="@Url.Action("Index", "Book")">Book Inventory</a>
                    @Html.Raw("&nbsp;")
                    <a class="footerlinks btn" href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_AdminBookingIssuing" })">Book Issuing</a>
                    @Html.Raw("&nbsp;")
                    <a class="footerlinks btn"  href="@Url.Action("ManageUsers", "Member")">Member Management</a>
                }
                else if (role == 0)
                {
                    <a class="footerlinks btn" href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_BookInventory" })">Browse Books</a>
                    @Html.Raw("&nbsp;")
                    <a class="footerlinks btn" href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_UserProfile" })">My Profile</a>
                }
                else
                {
                    <span class="text-muted">You are browsing as guest.</span>
                }
            </p>
        </div>
    </div>
</div>

