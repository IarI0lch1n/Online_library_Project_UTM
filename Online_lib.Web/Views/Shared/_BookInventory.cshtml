@model Online_lib.Domain.Entities.User.BookInventoryViewModel

@using (Html.BeginForm("AddBook", "Book", FormMethod.Post, new { enctype = "multipart/form-data", autocomplete = "off" }))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col text-center">
                                <h4>Book Details</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col text-center">
                                <img width="100px" src="~/Images/D-inventory.png" />
                            </div>
                        </div>
                        <hr />

                        <div class="row">
                            <div class="col">
                                <input type="file" class="form-control" name="BookFile" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <label>Book ID</label>
                                <input type="text" class="form-control" name="FormData.Id" placeholder="Book ID" />
                            </div>
                            <div class="col-md-9">
                                <label>Book Name</label>
                                <input name="FormData.BookName" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label>Language</label>
                                <input class="form-control" name="FormData.Language" />
                            </div>
                            <div class="col-md-4">
                                <label>Publisher ID</label>
                                <input type="number" class="form-control" name="FormData.PublisherId" />
                            </div>
                            <div class="col-md-4">
                                <label>Author ID</label>
                                <input type="number" class="form-control" name="FormData.AuthorId" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Publisher Date</label>
                                <input type="date" class="form-control" name="FormData.PublisherDate" />
                            </div>
                            <div class="col-md-6">
                                <label>Genre</label>
                                <input type="text" class="form-control" name="FormData.Genres" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label>Edition</label>
                                <input type="text" class="form-control" name="FormData.Edition" />
                            </div>
                            <div class="col-md-4">
                                <label>Price</label>
                                <input type="number" class="form-control" name="FormData.Price" />
                            </div>
                            <div class="col-md-4">
                                <label>Pages</label>
                                <input type="number" class="form-control" name="FormData.Pages" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label>Actual Stock</label>
                                <input type="number" class="form-control" name="FormData.ActualStock" />
                            </div>
                            <div class="col-md-4">
                                <label>Current Stock</label>
                                <input type="number" class="form-control" name="FormData.CurrentStock" readonly />
                            </div>
                            <div class="col-md-4">
                                <label>Issued Books</label>
                                <input type="number" class="form-control" name="FormData.IssuedBooks" readonly />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <label>Book Description</label>
                                <textarea class="form-control" name="FormData.Description" rows="2"></textarea>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-4">
                                <button type="submit" class="btn btn-success" name="action" value="add">Add</button>
                            </div>
                            <div class="col-4">
                                <button type="submit" class="btn btn-warning">Update</button>
                            </div>
                            <div class="col-4">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_Homepage" })">Back to Home Page</a>
            </div>

            <div class="col-md-7">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col text-center">
                                <h4>Book Inventory List</h4>
                            </div>
                        </div>
                        <hr />
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Book ID</th>
                                    <th>Book Name</th>
                                    <th>Author</th>
                                    <th>Genre</th>
                                    <th>Stock</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Books)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.BookName</td>
                                        <td>@item.Author</td>
                                        <td>@item.Genres</td>
                                        <td>@item.CurrentStock</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
