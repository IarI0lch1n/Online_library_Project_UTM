@model Online_lib.Domain.Entities.User.BookInventoryViewModel

@if (ViewBag.BookError != null)
{
    <div class="alert alert-danger">@ViewBag.BookError</div>
}

@using (Html.BeginForm("BookInventory", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-center">Book Details</h4>
                        <hr />
                        <div class="mb-2">
                            <input type="file" class="form-control" name="BookFile" />
                        </div>

                        <div class="mb-2">
                            <label>Book ID</label>
                            <input type="text" class="form-control" name="FormData.Id" value="@Model.FormData.Id" readonly />
                        </div>

                        <div class="mb-2">
                            <label>Book Name</label>
                            <input type="text" class="form-control" name="FormData.BookName" value="@Model.FormData.BookName" />
                        </div>

                        <div class="mb-2">
                            <label>Author ID</label>
                            <input type="number" class="form-control" name="FormData.AuthorId" value="@Model.FormData.AuthorId" />
                        </div>

                        <div class="mb-2">
                            <label>Genre</label>
                            <input type="text" class="form-control" name="FormData.Genres" value="@Model.FormData.Genres" />
                        </div>

                        <div class="mb-2">
                            <label>Edition</label>
                            <input type="text" class="form-control" name="FormData.Edition" value="@Model.FormData.Edition" />
                        </div>

                        <div class="mb-2">
                            <label>Price</label>
                            <input type="number" class="form-control" name="FormData.Price" value="@Model.FormData.Price" />
                        </div>

                        <div class="mb-2">
                            <label>Pages</label>
                            <input type="number" class="form-control" name="FormData.Pages" value="@Model.FormData.Pages" />
                        </div>

                        <div class="mb-2">
                            <label>Language</label>
                            <input type="text" class="form-control" name="FormData.Language" value="@Model.FormData.Language" />
                        </div>

                        <div class="mb-2">
                            <label>Publisher ID</label>
                            <input type="number" class="form-control" name="FormData.PublisherId" value="@Model.FormData.PublisherId" />
                        </div>

                        <div class="mb-2">
                            <label>Publisher Date</label>
                            <input type="date" class="form-control" name="FormData.PublisherDate" value="@Model.FormData.PublisherDate?.ToString(" yyyy-MM-dd")" />
                        </div>

                        <div class="mb-2">
                            <label>Description</label>
                            <textarea class="form-control" name="FormData.Description">@Model.FormData.Description</textarea>
                        </div>

                        <div class="row mb-2">
                            <div class="col">
                                <label>Actual Stock</label>
                                <input type="number" class="form-control" name="FormData.ActualStock" value="@Model.FormData.ActualStock" />
                            </div>
                            <div class="col">
                                <label>Current Stock</label>
                                <input type="number" class="form-control" name="FormData.CurrentStock" value="@Model.FormData.CurrentStock" readonly />
                            </div>
                            <div class="col">
                                <label>Issued Books</label>
                                <input type="number" class="form-control" name="FormData.IssuedBooks" value="@Model.FormData.IssuedBooks" readonly />
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col">
                                <button type="submit" name="action" value="add" class="btn btn-success w-100">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-7">
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-center">Books</h4>
                        <hr />
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Book</th>
                                    <th>Genre</th>
                                    <th>Language</th>
                                    <th>Stock</th>
                                    <th>Price</th>
                                    <th>Upload Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Books)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.BookName</td>
                                        <td>@item.Genres</td>
                                        <td>@item.Language</td>
                                        <td>@item.ActualStock</td>
                                        <td>@item.Price</td>
                                        <td>@item.UploadDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
