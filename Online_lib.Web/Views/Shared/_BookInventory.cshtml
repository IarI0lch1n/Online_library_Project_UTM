<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <h4>Book Details</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-center">
                            <img width="100px" src="~/Images/D-inventory.png" />
                        </div>
                    </div>
                    <hr />

                    <div class="row">
                        <div class="col">
                            <input type="file" class="form-control" asp-for="BookImage" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <label>Book ID</label>
                            <input type="text" class="form-control" asp-for="BookId" placeholder="Book ID" />
                        </div>
                        <div class="col-md-9">
                            <label>Book Name</label>
                            <input type="text" class="form-control" asp-for="BookName" placeholder="Book Name" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <label>Language</label>
                            <select class="form-control" asp-for="Language">
                                <option>En</option>
                                <option>Ru</option>
                                <option>Ro</option>
                                <option>De</option>
                                <option>Zn</option>
                                <option>El</option>
                                <option>Es</option>
                                <option>Fr</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>Publisher Name</label>
                            <select class="form-control" asp-for="PublisherId">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>Author Name</label>
                            <select class="form-control" asp-for="AuthorId">
                                <option>Someone</option>
                                <option>Unknown author</option>
                                <option>Various Author</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Publisher Date</label>
                            <input type="date" class="form-control" asp-for="PublisherDate" />
                        </div>
                        <div class="col-md-6">
                            <label>Genre</label>
                            <select multiple class="form-control" asp-for="Genres">
                                <option>Horror</option>
                                <option>Comedy</option>
                                <option>Science</option>
                                <option>Courses</option>
                                <option>For kids</option>
                                <option>Vocabulary</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <label>Edition</label>
                            <input type="text" class="form-control" asp-for="Edition" />
                        </div>
                        <div class="col-md-4">
                            <label>Price</label>
                            <input type="number" class="form-control" asp-for="Price" />
                        </div>
                        <div class="col-md-4">
                            <label>Pages</label>
                            <input type="number" class="form-control" asp-for="Pages" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <label>Actual Stock</label>
                            <input type="number" class="form-control" asp-for="ActualStock" />
                        </div>
                        <div class="col-md-4">
                            <label>Current Stock</label>
                            <input type="number" class="form-control" asp-for="CurrentStock" readonly="true" />
                        </div>
                        <div class="col-md-4">
                            <label>Issued Books</label>
                            <input type="number" class="form-control" asp-for="IssuedBooks" readonly="true" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label>Book Description</label>
                            <textarea class="form-control" asp-for="Description" rows="2"></textarea>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-4">
                            <button type="submit" class="btn btn-success">Add</button>
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-warning">Update</button>
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_Homepage" })  ">Back to Home Page</a>
        </div>

        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <h4>Book Inventory List</h4>
                        </div>
                    </div>
                    <hr />
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Book ID</th>
                                <th>Book Name</th>
                                <th>Author</th>
                                <th>Genre</th>
                                <th>Stock</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>