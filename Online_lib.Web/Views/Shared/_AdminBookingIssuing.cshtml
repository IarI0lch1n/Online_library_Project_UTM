<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <h4>Book Issuing</h4>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col text-center">
                            <img width="100px" src="~/Images/Books.png" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <hr />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label for="MemberID">Member ID</label>
                            <input class="form-control" id="MemberID" type="text" placeholder="Member ID" />
                        </div>

                        <div class="col-md-6">
                            <label for="BookID">Book ID</label>
                            <div class="input-group">
                                <input class="form-control" id="BookID" type="text" placeholder="Book ID" />
                                <button class="btn btn-primary" type="button">Go</button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label for="MemberName">Member Name</label>
                            <input class="form-control" id="MemberName" type="text" placeholder="Member Name" readonly="True" />
                        </div>

                        <div class="col-md-6">
                            <label for="BookName">Book Name</label>
                            <input class="form-control" id="BookName" type="text" placeholder="Book Name" readonly="True" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label for="StartDate">Start Date</label>
                            <input class="form-control" id="StartDate" type="date" placeholder="Start Date" />
                        </div>

                        <div class="col-md-6">
                            <label for="EndDate">End Date</label>
                            <input class="form-control" id="EndDate" type="date" placeholder="End Date" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <hr />
                            <button class="btn btn-primary w-100" type="button">Issue</button>
                            <hr />
                        </div>
                        <div class="col-6">
                            <hr />
                            <button class="btn btn-success w-100" type="button">Return</button>
                        </div>
                    </div>
                </div>
            </div>

            <a href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_Homepage" })">Back to Home Page</a>
            <br /><br />
        </div>

        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <h4>Issued Book List</h4>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <hr />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Member ID</th>
                                        <th>Book ID</th>
                                        <th>Member Name</th>
                                        <th>Book Name</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Данные будут загружаться из модели -->
                                    @* Пример итерации по списку в модели *@
                                    @* @foreach (var book in Model.IssuedBooks) { *@
                                    @* <tr> *@
                                    @* <td>@book.MemberID</td> *@
                                    @* <td>@book.BookID</td> *@
                                    @* <td>@book.MemberName</td> *@
                                    @* <td>@book.BookName</td> *@
                                    @* <td>@book.StartDate.ToString("yyyy-MM-dd")</td> *@
                                    @* <td>@book.EndDate.ToString("yyyy-MM-dd")</td> *@
                                    @* </tr> *@
                                    @* } *@
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
