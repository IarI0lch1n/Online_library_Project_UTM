<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <img width="100px" src="~/Images/User.png" alt="Profile Image" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col text-center">
                            <h4>Your Profile</h4>
                            <span>Account Status - </span>
                            <!--
                                <span class="badge rounded-pill bg-info p-2 text-white">Model.AccountStatus</span>
                            -->
                        </div>
                    </div>

                    <hr />

                    <form method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Full Name</label>
                                <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                            </div>

                            <div class="col-md-6">
                                <label>Date of Birth</label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Contact Number</label>
                                <input asp-for="ContactNumber" class="form-control" type="tel" />
                            </div>

                            <div class="col-md-6">
                                <label>Email ID</label>
                                <input asp-for="Email" class="form-control" type="email" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label>State</label>
                                <select asp-for="State" class="form-control">
                                    <option>Select</option>
                                    <option>Moldova</option>
                                    <option>Romania</option>
                                    <option>Ukraine</option>
                                </select>
                            </div>

                            <div class="col-md-4">
                                <label>City</label>
                                <input asp-for="City" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label>Pincode</label>
                                <input asp-for="Pincode" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <label>Full Address</label>
                                <textarea asp-for="FullAddress" class="form-control" rows="2"></textarea>
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col text-center">
                                <span class="badge rounded-pill bg-info p-2 text-white">Login Credentials</span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label>User ID</label>
                                <input asp-for="UserID" class="form-control" readonly />
                            </div>

                            <div class="col-md-4">
                                <label>Old Password</label>
                                <input asp-for="OldPassword" class="form-control" type="password" />
                            </div>

                            <div class="col-md-4">
                                <label>New Password</label>
                                <input asp-for="NewPassword" class="form-control" type="password" />
                            </div>
                        </div>

                        <hr />

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-50">Update</button>
                        </div>
                    </form>

                    <hr />

                    <a href="@Url.Action("ChangeHomepage", "Home", new { homepage = "_Homepage" })">Back to Home Page</a>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <img width="100px" src="Images/Books.png" alt="Books" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col text-center">
                            <h4>Your Read Books</h4>
                            <span class="badge rounded-pill bg-info p-2 text-white">Your books info</span>
                        </div>
                    </div>

                    <hr />

                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- 
                            foreach (var book in Model.Books)
                            {
                                <tr>
                                    <th>book.Id</th>
                                    <td>book.Title</td>
                                    <td>book.Author</td>
                                    <td>book.Status</td>
                                </tr>
                            }
                        </tbody>
                        -->
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>